@page
@model IndexModel
@{
    ViewData["Title"] = "Addition";
}
<script>
    function summa() {
        var num1 = document.getElementById("num1").value;
        var num2 = document.getElementById("num2").value;
        fetch("http://localhost:5000/sum?num1=" + num1 + "&num2=" + num2).then(function (result) {
            return result.json();
        }).then(function (jsonData) {
            document.getElementById("output").innerHTML = "Output : " + jsonData["Result"];
        });
    }
</script>

<div class="text-center">
    <h1>Hello, world!</h1>
    <p>The time on the server is @DateTime.Now</p>
    <div class="jumbotron">
        <p class="lead">Input 1:
            <input type="text" id="num1" />
        </p>
        <p class="lead">Input 2:
            <input type="text" id="num2" />
        </p>
        <p><a class="btn btn-primary btn-lg" onclick="summa()">Addition</a></p>
        <p class="lead" id="output">Output : 000</p>
        </p>
    </div>
</div>
